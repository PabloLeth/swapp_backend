{% extends 'base.html.twig' %}

{% block title %}Rating index{% endblock %}

{% block body %}
    <h1>Rating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>RateId</th>
                <th>Rate</th>
                <th>Review</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td>{{ rating.rateId }}</td>
                <td>{{ rating.rate }}</td>
                <td>{{ rating.review }}</td>
                <td>
                    <a href="{{ path('rating_show', {'rateId': rating.rateId}) }}">show</a>
                    <a href="{{ path('rating_edit', {'rateId': rating.rateId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rating_new') }}">Create new</a>
{% endblock %}
