<form method="post" action="{{ path('workers_delete', {'workerId': worker.workerId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ worker.workerId) }}">
    <button class="btn">Delete</button>
</form>
