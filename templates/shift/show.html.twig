{% extends 'base.html.twig' %}

{% block title %}Shift{% endblock %}

{% block body %}
    <h1>Shift</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ShiftId</th>
                <td>{{ shift.shiftId }}</td>
            </tr>
            <tr>
                <th>WeekId</th>
                <td>{{ shift.weekId }}</td>
            </tr>
            <tr>
                <th>DayId</th>
                <td>{{ shift.dayId }}</td>
            </tr>
            <tr>
                <th>StartShift</th>
                <td>{{ shift.startShift }}</td>
            </tr>
            <tr>
                <th>EndShift</th>
                <td>{{ shift.endShift }}</td>
            </tr>
            <tr>
                <th>Swapping</th>
                <td>{{ shift.swapping ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('shift_index') }}">back to list</a>

    <a href="{{ path('shift_edit', {'shiftId': shift.shiftId}) }}">edit</a>

    {{ include('shift/_delete_form.html.twig') }}
{% endblock %}
