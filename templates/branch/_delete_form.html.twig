<form method="post" action="{{ path('branch_delete', {'branchId': branch.branchId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ branch.branchId) }}">
    <button class="btn">Delete</button>
</form>
